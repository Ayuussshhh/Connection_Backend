{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cargo build --release"
  },
  "deploy": {
    "startCommand": "./target/release/schemaflow-api",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "rustVersion": "1.93.1"
  }
}
